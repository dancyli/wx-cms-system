.container{
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.content-item{
  margin-bottom: 20rpx;
  height: 200rpx;
  position: relative;
}
.content-item-img image{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 5px;
}
.content-item-img{
  float: left;
}
.content-item-text{
  float: left; 
  width: 450rpx;
  height: 200rpx;
  padding: 0 20rpx;
}
.content-item-title{
  font-size: 32rpx;
  margin-top: 10rpx;
}
.content-item-time{
  font-size: 28rpx;
  color: #aaa;
  position: absolute;
  bottom: 0;
}

.load-more{
  text-align: center;
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #aaa;
}

